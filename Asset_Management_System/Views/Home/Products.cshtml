<!DOCTYPE html>
<html>
<body>
    @{
        ViewBag.Title = "Products";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Product List</h2>
    <div class="product-list" style="background-color: #FAF9F6">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Product ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Product A</td>
                                    <td>Description A</td>
                                    <td>$100</td>
                                    <td>10</td>
                                    <td>
                                        <a asp-action="EditProduct" asp-route-id="1" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="DeleteProduct" asp-route-id="1" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Product B</td>
                                    <td>Description B</td>
                                    <td>$200</td>
                                    <td>20</td>
                                    <td>
                                        <a asp-action="EditProduct" asp-route-id="2" class="btn btn-primary btn-sm">Edit</a>
                                        <a asp-action="DeleteProduct" asp-route-id="2" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="mt-3">
                        <a asp-action="AddProduct" class="btn btn-success">Add New Product</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
