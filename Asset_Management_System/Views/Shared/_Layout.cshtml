<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asset_Management_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Asset_Management_System.styles.css" asp-append-version="true" />
</head>
<style>
    .sidebar {
        height: 100vh;
        background-color: #f8f9fa;
        padding-top: 20px;
    }

        .sidebar .nav-link {
            color: #000;
            margin: 10px 0;
        }

            .sidebar .nav-link.active {
                background-color: #ffc107;
                color: #fff;
            }

    .content {
        padding: 20px;
    }

    .product-list {
        height: 70vh;
        overflow-y: auto;
        border: 1px solid #ddd;
        padding: 10px;
    }
</style>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar" style="background-color: #fff7df">
                <div class="text-center mb-4">
                    <img src="user-icon.png" alt="User" class="img-fluid rounded-circle" style="width: 50px;" />
                    <p>Welcome: @User.Identity.Name</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"] as string == "Products" ? "active" : "") rounded text-center" asp-controller="Home" asp-action="Products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"] as string == "Contacts" ? "active" : "") rounded text-center" asp-controller="Home" asp-action="Contacts">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"] as string == "Tasks" ? "active" : "") rounded text-center" asp-controller="Home" asp-action="Tasks">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["ActivePage"] as string == "Assets" ? "active" : "") rounded text-center" asp-controller="Home" asp-action="Assets">Assets</a>
                    </li>
                </ul>
            </nav>
            <main role="main" class="col-md-10 ml-sm-auto col-lg-10 content" style="background-color:#ffe8a3">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Asset_Management_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
